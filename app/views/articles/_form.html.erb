<%= form_for(@article, remote: true) do |f| %>
  <div class="form-group">
    <%= f.text_field :title,autofocus: true, :class => "form-control input-lg",placeholder: "请输入文章标题"%>
  </div>
  <div class="form-group">
    <%= f.text_area :content, :class => "form-control simditor-input", placeholder: "请输入文章内容" %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "提交", class: "btn btn-primary mr-5" %>
    <button type="button" class="btn btn-light">
      <%= link_to "返回", articles_path,class: "text-gray" %>
    </button>
  </div>
<% end %>